@model IEnumerable<GCD0805.Models.Todo>
@{
    ViewBag.Title = "Index";
}

<h2>My Todos</h2>
<div class="form-group">
    @*<a href="#" class="btn btn-primary">New Todo</a>*@

    @Html.ActionLink("New Todo", "Create", "Todos", htmlAttributes: new { @class = "btn btn-primary" })
</div> 

<form>
    <div class="form-group">
        <input type="text" class="form-control" placeholder="Search by Name"/>
    </div>
        <button type="submit" class="btn btn-primary">Search</button>
</form>

@*<ul>
    <li>Id: @Model.Id</li>
    <li>Description: @Model.Description</li>
    <li>DueDate: @Model.DueDate.ToString("d")</li>
</ul>*@

<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Description</th>
            <th scope="col">Duedate</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in @Model)
        {
        <tr>
            <th scope="row">@item.Id</th>
            <td>@item.Description</td>
            <td>@item.DueDate.ToString("d")</td>
            <td>

                @Html.ActionLink("Details", "Details", "Todos", new { id = item.Id }, new { @class = "btn btn-info" })
                @Html.ActionLink("Delete", "Delete", "Todos", new { id = item.Id }, new { @class = "btn btn-danger" })

                @*<a href="#" class="btn btn-info">Detail</a>
        <a href="#" class="btn btn-success">Edit</a>
        <a href="#" class="btn btn-danger">Delete</a>*@
            </td>
        </tr>

        }
    </tbody>
</table>

