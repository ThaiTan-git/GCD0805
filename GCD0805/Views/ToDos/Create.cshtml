@model GCD0805.ViewModels.TodoCategoriesViewModel
@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@using (Html.BeginForm("Create", "Todos", FormMethod.Post))
{
<div class="form-group">
    <label>Description</label>
    @Html.TextBoxFor(m => m.Todo.Description, "", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Todo.Description, "Invalid",
  new { @class = "text-danger" }
  )
</div>
<div class="form-group">
    <label>Due Date</label>
    @Html.TextBoxFor(m => m.Todo.DueDate, "", new { @class = "form-control", type = "Date" })
    @Html.ValidationMessageFor(m => m.Todo.DueDate, "Invalid",
  new { @class = "text-danger" }
  )
</div>
<div class="form-group">
    <label>Category</label>
    @Html.DropDownListFor(m => m.Todo.CategoryId,
      new SelectList(Model.Categories, "Id", "Description"),
      new { @class = "form-control" }
    )
</div>
    <button type="submit" class="btn btn-primary">Create</button>
}

